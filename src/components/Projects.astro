---
import Modal from "./Modal.astro";
import ResponsiveAnimatedIcon from "./ResponsiveAnimatedIcon.astro";
---

<div class="div3 light-gray-background overflow-hidden relative">
  <div
    class="flex justify-end w-[33px] md:w-[40px] lg:w-[50px] ml-auto cursor-pointer"
    id="openModalProjects"
    aria-label="Open modal Projects"
  >
    <ResponsiveAnimatedIcon
      src="https://animatedicons.co/get-icon?name=Fullscreen&style=minimalistic&token=defd54f5-3357-43dd-ad9e-32e227c0ac60"
    />
  </div>
  <p
    class="raleway-semiBold white-text text-[20px] lg:text-[35px] text-left mt-[3px] lg:mt-[55px] ms-[10px] lg:ms-[29px]"
  >
    Projects
  </p>
  <img
    class="absolute w-[40%] md:w-[60%] h-auto object-contain"
    style="bottom: 10px; right: 10px;"
    src="/assets/spring.avif"
    alt="3d spring"
  />
</div>

<!-- Modal overlay -->
<Modal
  id="modalProjects"
  triggerId="#openModalProjects"
  bgColor="black-background"
>
    <p class="raleway-semiBold white-text text-center text-[50px]">Projects</p>
    <section>
        <div
        class="bg-gradient-to-t from-[#55575c] to-[#1f1f1f] w-[200px] rounded-2xl p-4"
        >
        <div class="flex justify-end">
            <button class="light-gray-text text-2xl cursor-pointer">
            <i class="fa-solid fa-circle-info"></i>
        </button>
        </div>
        <img src="/public/assets/project-preview/yelpcamp.png" alt="" />
        <p>YelpCamp</p>
        </div>
    </section>
    <p class="raleway-regular light-gray-text text-[20px]">
        Click the information icon <span
        ><i class="fa-solid fa-circle-info"></i></span
        > to see more about the project
    </p>
</Modal>
